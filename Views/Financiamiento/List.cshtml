@model IEnumerable<SCMotors.Models.Financiamiento>

@{
    ViewBag.Title = "Lista de Financiamientos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Financiamientos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Interés</th>
            <th>Cuotas</th>
            <th>Banco</th>
            <th>Monto Mínimo</th>
            <th>Monto Máximo</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Interés)</td>
                <td>@Html.DisplayFor(modelItem => item.Cuotas)</td>
                <td>@Html.DisplayFor(modelItem => item.Banco)</td>
                <td>@Html.DisplayFor(modelItem => item.Monto_minimo)</td>
                <td>@Html.DisplayFor(modelItem => item.Monto_maximo)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>
                    <a href="@Url.Action("Edit", "Financiamiento", new { id = item.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Details", "Financiamiento", new { id = item.Id })" class="btn btn-info btn-sm">Detalles</a>
                    <a href="@Url.Action("Delete", "Financiamiento", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar este financiamiento?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
