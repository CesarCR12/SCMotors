@model IEnumerable<SCMotors.Models.Reservas>

@{
    ViewBag.Title = "Lista de Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Reservas</h2>

<p>
    @Html.ActionLink("Crear Nueva Reserva", "Create", new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Modelo de Auto</th>
            <th>Detalles de Reserva</th>
            <th>Estado</th>
            <th>Cliente ID</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Modelo_auto)</td>
                <td>@Html.DisplayFor(modelItem => item.Detalles_reserva)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@Html.DisplayFor(modelItem => item.Cliente_id)</td>
                <td>
                    <a href="@Url.Action("Edit", "Reservas", new { id = item.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Details", "Reservas", new { id = item.Id })" class="btn btn-info btn-sm">Detalles</a>
                    <a href="@Url.Action("Delete", "Reservas", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar esta reserva?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
