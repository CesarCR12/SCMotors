@{
    ViewBag.Title = "Gestión de Reclamos";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .navbar-dark {
            background-color: #2a3e53 !important;
        }

        .nav-link {
            color: white;
        }

        .navbar-toggler-icon {
            filter: invert(100%);
        }

        .header-options {
            background-color: #2a3e53;
            color: white;
            padding: 20px;
            border-radius: 5px;
        }

            .header-options a {
                color: white;
                margin-right: 15px;
            }

                .header-options a:hover {
                    text-decoration: none;
                    color: #f1f1f1;
                }

        .welcome-text {
            text-align: center;
            margin-bottom: 30px;
        }

            .welcome-text p {
                font-size: 1.2rem;
            }
    </style>
</head>
<body>
    <div class="welcome-text">
        <h1 class="mt-5">Bienvenido a la Gestión de Reclamos</h1>
        <p>Utiliza las opciones del menú para gestionar los datos de las Reclamos de manera eficiente.</p>
    </div>

    <div class="header-options text-center">
        <h2>Gestión de Reclamos</h2>
        <a class="btn btn-outline-light" href="@Url.Action("Create", "Reclamos")">Crear Reclamo</a>
        <a class="btn btn-outline-light" href="@Url.Action("List", "Reclamos")">Lista</a>
    </div>

    <div class="container mt-4">

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

