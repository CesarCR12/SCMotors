@model IEnumerable<SCMotors.Models.Reclamos>

@{
    ViewBag.Title = "Lista de Reclamos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Reclamos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Reclamo", "Create", new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Cliente ID</th>
            <th>Tipo de Reclamo</th>
            <th>Detalle</th>
            <th>Estado</th>
            <th>Respuesta</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Cliente_id)</td>
                <td>@Html.DisplayFor(modelItem => item.Tipo_reclamo)</td>
                <td>@Html.DisplayFor(modelItem => item.Detalle)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@Html.DisplayFor(modelItem => item.Respuesta)</td>
                <td>
                    <a href="@Url.Action("Edit", "Reclamos", new { id = item.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Details", "Reclamos", new { id = item.Id })" class="btn btn-info btn-sm">Detalles</a>
                    <a href="@Url.Action("Delete", "Reclamos", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar este reclamo?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

