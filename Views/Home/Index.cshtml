@{
    ViewBag.Title = "SC Motors - Inicio";
}

<main>
    <section class="hero text-center py-5" style="background-color: #f8f9fa;">
        <h1 id="title" class="display-4">Bienvenido a SC Motors</h1>
        <p class="lead">Encuentra los mejores autos al mejor precio.</p>
        <a href="/autos" class="btn btn-primary btn-lg mt-3">Explorar Autos</a>
    </section>

    <div class="container py-5">
        <div class="row text-center">
            <section class="col-md-4" aria-labelledby="qualityTitle">
                <h2 id="qualityTitle" style="color: #000000; ">Calidad Garantizada</h2>
                <p style="color: #000000; ">Todos nuestros autos están inspeccionados y garantizados para ofrecerte la mejor experiencia.</p>
                <img src="https://suministrosneumaticos.com.co/wp-content/uploads/2016/11/calidad-garantizada.png" alt="Calidad Garantizada" class="img-fluid mt-3" style="max-width: 150px;">
            </section>
            <section class="col-md-4" aria-labelledby="financingTitle">
                <h2 id="financingTitle" style="color: #000000; ">Opciones de Financiamiento</h2>
                <p style="color: #000000; ">Te ofrecemos planes flexibles de financiamiento que se ajustan a tus necesidades.</p>
                <img src="https://cdn-icons-png.flaticon.com/512/1569/1569357.png" alt="Opciones de Financiamiento" class="img-fluid mt-3" style="max-width: 150px;">
            </section>
            <section class="col-md-4" aria-labelledby="supportTitle">
                <h2 id="supportTitle" style="color: #000000; ">Soporte y Asistencia</h2>
                <p style="color: #000000; ">Estamos contigo antes, durante y después de tu compra para garantizar tu satisfacción.</p>
                <img src="https://static.vecteezy.com/system/resources/thumbnails/000/345/523/small/Technical_Support.jpg" alt="Soporte y Asistencia" class="img-fluid mt-3" style="max-width: 150px;">
            </section>
        </div>
    </div>

    <div class="highlight-section py-5 text-center text-white" style="background-color: #2a3e53;">
        <h2>Promociones Exclusivas</h2>
        <p class="lead">¡Aprovecha nuestros descuentos en autos seleccionados!</p>
        <a href="/promociones" class="btn btn-outline-light btn-lg">Ver Promociones</a>
    </div>

    <div class="container py-5 text-center">
        <h2>Gestión de Clientes</h2>
        <p>Accede al listado de nuestros clientes y gestiona su información de manera eficiente.</p>
        <a href="/clientes" class="btn btn-secondary btn-lg">Ir a Clientes</a>
    </div>
</main>
