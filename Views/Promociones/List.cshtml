@model IEnumerable<SCMotors.Models.Promociones>

@{
    ViewBag.Title = "Lista de Promociones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Promociones</h2>

<p>
    @Html.ActionLink("Crear Nueva Promoción", "Create", new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Tipo</th>
            <th>% Descuento</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripción)</td>
                <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                <td>@Html.DisplayFor(modelItem => item.Porcentaje_descuento)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>
                    <a href="@Url.Action("Edit", "Promociones", new { id = item.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Details", "Promociones", new { id = item.Id })" class="btn btn-info btn-sm">Detalles</a>
                    <a href="@Url.Action("Delete", "Promociones", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar esta promoción?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

