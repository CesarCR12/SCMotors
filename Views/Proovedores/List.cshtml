@model IEnumerable<SCMotors.Models.Proovedores>

@{
    ViewBag.Title = "Lista de Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Proveedores</h2>

<p>
    @Html.ActionLink("Crear Nuevo Proveedor", "Create", new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Productos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.productos)
                    <!-- Consider showing a more user-friendly representation of productos if needed -->
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Proovedores", new { id = item.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Details", "Proovedores", new { id = item.Id })" class="btn btn-info btn-sm">Detalles</a>
                    <a href="@Url.Action("Delete", "Proovedores", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar este proveedor?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

