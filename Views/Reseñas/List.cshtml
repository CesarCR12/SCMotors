@model IEnumerable<SCMotors.Models.Reseñas>

@{
    ViewBag.Title = "Lista de Reseñas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Reseñas</h2>

<p>
    @Html.ActionLink("Crear Nueva Reseña", "Create", new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Cliente ID</th>
            <th>Vehículo</th>
            <th>Calificación</th>
            <th>Comentario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Cliente_id)</td>
                <td>@Html.DisplayFor(modelItem => item.Vehiculo)</td>
                <td>@Html.DisplayFor(modelItem => item.Calificacion)</td>
                <td>@Html.DisplayFor(modelItem => item.Comentario)</td>
                <td>
                    <a href="@Url.Action("Edit", "Reseñas", new { id = item.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Details", "Reseñas", new { id = item.Id })" class="btn btn-info btn-sm">Detalles</a>
                    <a href="@Url.Action("Delete", "Reseñas", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar esta reseña?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

