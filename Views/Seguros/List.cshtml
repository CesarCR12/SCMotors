@model IEnumerable<SCMotors.Models.Seguros>

@{
    ViewBag.Title = "Lista de Seguros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Seguros</h2>

<p>
    @Html.ActionLink("Crear Nuevo Seguro", "Create", new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Cobertura</th>
            <th>Costo Anual</th>
            <th>Compañía</th>
            <th>Vigencia (meses)</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Cobertura)</td>
                <td>@Html.DisplayFor(modelItem => item.Costo_anual)</td>
                <td>@Html.DisplayFor(modelItem => item.Compañía)</td>
                <td>@Html.DisplayFor(modelItem => item.Vigencia_meses)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>
                    <a href="@Url.Action("Edit", "Seguros", new { id = item.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Details", "Seguros", new { id = item.Id })" class="btn btn-info btn-sm">Detalles</a>
                    <a href="@Url.Action("Delete", "Seguros", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar este seguro?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
